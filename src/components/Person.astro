---
import { Image } from "@astrojs/image/components";
const { image, name, Content } = Astro.props;
---

<div class="card-dark max-w-lg">
    <div class="flex gap-4 items-center">
        <Image
            src={image}
            alt={`Image (photograph or profile picture) representing this person, ${name}`}
            height={64}
            aspectRatio={1}
        />
        <h3>{name}</h3>
    </div>
    <Content />
</div>
