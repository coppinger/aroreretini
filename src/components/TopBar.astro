---
import classNames from "classnames";

import Breadcrumb from "./Breadcrumb.astro";
import Logo from "../components/layout/side-menu/Logo.astro";

const { pathname } = Astro.url;
const urls = pathname.split("/");
---

<div class="flex flex-col">
    <div class="flex md:hidden">
        <Logo />
    </div>
    <div
        class={classNames(
            "md:h-14 flex items-start",
            urls[1]
                ? "gap-1 items-center"
                : " flex-col sm:flex-row sm:gap-2 sm:items-center"
        )}
    >
        {
            pathname == "/" ? (
                <>
                    <p class="text-slate-400">te reo Maori:</p>
                    <p>(noun) attention goes to many things. (ADHD)</p>
                </>
            ) : (
                <Breadcrumb urls={urls} />
            )
        }
    </div>
</div>
