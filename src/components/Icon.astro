---
import classNames from "classnames";

import iconList from "../iconList.js";

const { iconName, color, iconSize } = Astro.props;
const fillColor = `fill-${color}-950`;
---

<svg
    viewBox="0 0 24 24"
    style={{ width: iconSize, height: iconSize }}
    class={color === "slate"
        ? classNames("fill-slate-400")
        : color
        ? classNames(fillColor)
        : classNames("fill-white")}
    xmlns="http://www.w3.org/2000/svg"
>
    <path d={iconList[iconName] || iconList.empty}></path>
</svg>
