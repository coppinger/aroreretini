---
export interface Props {
    title: string;
    subTitle: string;
    href: string;
}

const { title, subTitle, href } = Astro.props;
---

<li>
    <a
        href=`/${href}`
        class="flex flex-col md:border-l-2 border-slate-700 hover:border-white active:border-white md:pl-6 transition-all duration-200 ease-in-out h-[44px] justify-center"
    >
        <span class="text-slate-400 text-xl">{title}</span>
        <span class="text-xs">{subTitle}</span>
    </a>
</li>
