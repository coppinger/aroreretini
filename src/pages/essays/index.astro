---
import EssayList from "@components/EssayList.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

const essays = await Astro.glob("../../content/essays/*.mdx");
---

<BaseLayout>
    <main slot="main">
        <div class="flex flex-col gap-8 max-w-lg">
            <div class="flex flex-col gap-2">
                <h1 class="text-4xl text-white">Essays</h1>
            </div>
            <div
                class="border-l-2 border-dashed border-slate-700 flex flex-col gap-8 py-6"
            >
                <EssayList essays={essays} isIndex={false} />
            </div>
        </div>
    </main>
</BaseLayout>
