---
import Person from "@components/Person.astro";
import BaseLayout from "src/layouts/BaseLayout.astro";
const people = await Astro.glob("../content/people/*.mdx");
---

<BaseLayout>
    <main slot="main" class="w-full">
        <div class="flex flex-col gap-8 w-full">
            <div class="flex flex-col gap-2">
                <h1 class="text-4xl text-white">People</h1>
                <p class="max-w-lg">
                    A collection of people I'm deeply grateful to for helping me
                    along my way.
                </p>
            </div>
            <div class="flex flex-col gap-8">
                {
                    people.map(({ frontmatter, Content }) => {
                        return (
                            <Person
                                image={frontmatter.image}
                                creationDate={frontmatter.creationDate}
                                name={frontmatter.name}
                                Content={Content}
                            />
                        );
                    })
                }
            </div>
        </div>
    </main>
</BaseLayout>
